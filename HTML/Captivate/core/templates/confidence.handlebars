<div class="inner">
    {{#if title}}
        <div class="title">
            <h4>{{{title}}}</h4>
        </div>
    {{/if}}
    {{#if body}}
        <div class="body">
            <p>{{{body}}}</p>
        </div>
    {{/if}}
    <div class="widget">
        <a href="#" class="down icon-minus">
            <h6>-</h6>
        </a>
        <div class="slider scale">
            <div class="slider marker" />
            <div class="slider handle"><span></span></div>
        </div>
    <a href="#" class="up icon-plus">
        <h6>+</h6>
    </a> 
    <a href="#" class="button submit">
        <h6>
        Submit
        </h6>
    </a>
    </div>
</div>