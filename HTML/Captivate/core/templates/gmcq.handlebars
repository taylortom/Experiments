<div class="inner">
    {{#if title}}
    <div class="title">
        <h4 class="inner">
            {{{title}}}
        </h4>
    </div>
    {{/if}}
    {{#if body}}
    <div class="body">
        <p class="inner">
            {{{body}}}
        </p>
    </div>
    {{/if}}
    <div class="widget {{#if complete}}complete {{#unless correct}}mine{{/unless}} {{/if}} ">
        <div class="inner">
            <div class="pointboard">
                {{#if graphic}}
                <img src="{{graphic.src}}" alt="{{graphic.alt}}" title="{{graphic.title}}"/>
                {{/if}}
                {{#if complete}}
                <div class="items">
                    {{#each items}}
                    <div class="item {{#if correct}}correct{{else}}incorrect{{/if}} item-{{@index}}">
                        <label for="{{../id}}-{{@index}}" class="{{#if selected}}selected{{/if}}">
                            {{#if graphic}}
                            <img src="{{graphic.src}}" alt="{{graphic.alt}}" title="{{graphic.title}}"/>
                            {{/if}}
                            {{#if graphic.title}}
                            <h5 class="inner">
                                {{graphic.title}}
                            </h5>
                            {{/if}}
                            <div class="state">
                                <div class="icon radio"></div>
                            </div> 
                        </label>
                        <input type="checkbox" id="{{../id}}-{{@index}}"/>
                    </div>
                    {{/each}}
                </div>
                {{else}}
                <div class="items">
                    {{#each items}}
                    <div class="item item-{{@index}}">
                        <label for="{{../id}}-{{@index}}" class="{{#if selected}}selected{{/if}}">
                            {{#if graphic}}
                            <img src="{{graphic.src}}" alt="{{graphic.alt}}" title="{{graphic.title}}"/>
                            {{/if}}
                            {{#if graphic.title}}
                            <h5 class="inner">
                                {{graphic.title}}
                            </h5>
                            {{/if}}
                            <div class="state">
                                <div class="icon radio"></div>
                            </div> 
                        </label>
                        <input type="checkbox" id="{{../id}}-{{@index}}"/>
                    </div>
                    {{/each}}
                </div>
                {{/if}}
            </div>
        </div>
        {{#unless complete}}
        <a href="#" class="button submit">
            <h6>
                {{#if button.submit}}    
                    {{{button.submit}}} 
                {{else}}
                    Submit
                {{/if}}
            </h6>
        </a>
        <a href="#" class="button reset">
            <h6>
                {{#if button.reset}}    
                    {{{button.reset}}} 
                {{else}}
                    Reset
                {{/if}}
            </h6>
        </a> 
        {{/unless}}
        <a href="#" class="button model">
            <h6>
                {{#if button.model}}    
                    {{{button.model}}} 
                {{else}}
                    Model Answer
                {{/if}}
            </h6>
        </a>

        <a href="#" class="button mine">
            <h6>
                {{#if button.mine}}    
                    {{{button.mine}}} 
                {{else}}
                    My Answer
                {{/if}}
            </h6>
        </a>
    </div>
</div>
