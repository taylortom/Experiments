<div class="inner">
    {{#if title}}
    <div class="title">
        <h4 class="inner">
            {{{title}}}
        </h4>
    </div>
    {{/if}}
    {{#if body}}
    <div class="body">
        <p class="inner">
            {{{body}}}
        </p>
    </div>
    {{/if}}
    <div class="widget {{#if complete}} complete submitted user {{#if correct}} correct {{/if}} {{/if}} ">
        {{#if complete}}
            {{#each items}}
            <div class="item {{#if correct}}correct{{else}}incorrect{{/if}} item-{{@index}}">
                <label for="{{../id}}-{{@index}}" class="{{#if selected}}selected{{/if}}">
                    <div class="state">
                        <div class="icon radio"></div>
                    </div>
                    <h5 class="inner">
                        {{{text}}}
                    </h5>
                </label>
                <input type="checkbox" id="{{../id}}-{{@index}}"/>
            </div>
            {{/each}}
        {{else}}
            {{#each items}}
            <div class="item item-{{@index}}">
                <label for="{{../id}}-{{@index}}" class="{{#if selected}}selected{{/if}}">
                    <div class="state">
                        <div class="icon radio"></div>
                    </div>
                    <h5 class="inner">
                        {{{text}}}
                    </h5>
                </label>
                <input type="checkbox" id="{{../id}}-{{@index}}"/>
            </div>
            {{/each}}
        {{/if}}
        {{#unless complete}}
        <a href="#" class="button submit">
            <h6>
                {{#if button.submit}}    
                    {{{button.submit}}} 
                {{else}}
                    Submit
                {{/if}}
            </h6>
        </a>
        <a href="#" class="button reset">
            <h6>
                {{#if button.reset}}    
                    {{{button.reset}}} 
                {{else}}
                    Reset
                {{/if}}
            </h6>
        </a> 
        {{/unless}}
        <a href="#" class="button model">
            <h6>
                {{#if button.model}}    
                    {{{button.model}}} 
                {{else}}
                    Model Answer
                {{/if}}
            </h6>
        </a>

        <a href="#" class="button user">
            <h6>
                {{#if button.user}}    
                    {{{button.user}}} 
                {{else}}
                    My Answer
                {{/if}}
            </h6>
        </a>
    </div>
</div>
